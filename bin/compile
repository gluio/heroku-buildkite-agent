#!/bin/sh
BUILDPACK_PATH="`dirname \"$0\"`/.."
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

export_env_dir() {
  blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
  if [ -d "$ENV_DIR" ]; then
    for e in $(ls $ENV_DIR); do
      echo "$e" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $ENV_DIR/$e)"
      :
    done
  fi
}

export_env_dir
export PATH="$BUILD_DIR/bin:$PATH"
export BUILDKITE_BOOTSTRAP_SCRIPT_PATH="$BUILDPACK_PATH/etc/bootstrap.sh"
export BUILDKITE_HOOKS_PATH="$BUILDPACK_PATH/hooks"
export BUILDKITE_BUILD_PATH=$BUILD_DIR
export BUILDKITE_AGENT_METADATA="heroku=true"
export BUILDKITE_AGENT_PRIORITY="100"
if [ -z "$GIT_SHA" ]; then
  export BUILDKITE_AGENT_METADATA="$BUILDKITE_AGENT_METADATA";
fi
if [ -z "$APP_NAME" ]; then
  export BUILDKITE_AGENT_METADATA="$BUILDKITE_AGENT_METADATA,appname=$APP_NAME";
else
  echo "ERROR: Need to set APP_NAME config var so that we can tell Buildkite to"
  echo "       only target this agent for builds."
  exit 1
fi

cd $BUILD_DIR

echo $(ls -al $BUILDPACK_PATH/bin)
timeout 600 "$BUILDPACK_PATH/bin/buildkite-agent start --exit-with-status"
