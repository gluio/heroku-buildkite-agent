#!/bin/sh
BUILDPACK_PATH="`dirname \"$0\"`/.."
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

# TODO: Be more defensive about checking if this feature is available
GIT_SHA=$(sed -e 's/^.*"commit":"\([a-f0-9]\+\)".*$/\1/' /etc/heroku/dyno)

echo "Environment is in $ENV_DIR"

export_env_dir() {
  blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
  if [ -d "$ENV_DIR" ]; then
    for e in $(ls $ENV_DIR); do
      echo "Setting $e environment variable for build"
      echo "$e" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $ENV_DIR/$e)"
      :
    done
  fi
}

export_env_dir
export PATH="$BUILD_DIR/bin:$PATH"
export BUILDKITE_BOOTSTRAP_SCRIPT_PATH="$BUILDPACK_PATH/etc/bootstrap.sh"
export BUILDKITE_HOOKS_PATH="$BUILDPACK_PATH/hooks"
export BUILDKITE_BUILD_PATH=$BUILD_DIR
export BUILDKITE_AGENT_METADATA="heroku=true"
export BUILDKITE_AGENT_PRIORITY="100"
if [ -z "$GIT_SHA" ]; then
  export BUILDKITE_AGENT_METADATA="$BUILDKITE_AGENT_METADATA,gitsha=$GIT_SHA";
fi

cd $BUILD_DIR

$BUILDPACK_PATH/bin/buildkite-agent start --exit-with-status
