#!/bin/sh
BUILDPACK_PATH="`dirname \"$0\"`/.."
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo "Environment is in $ENV_DIR"

export_env_dir() {
  blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
  if [ -d "$ENV_DIR" ]; then
    for e in $(ls $ENV_DIR); do
      echo "Setting $e environment variable for build"
      echo "$e" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $ENV_DIR/$e)"
      :
    done
  fi
}

export_env_dir
export PATH="$BUILD_DIR/bin:$PATH"

cd $BUILD_DIR
$BUILDPACK_PATH/bin/buildkite-agent start --exit-with-status --priority=100 --token=$BUILDKITE_AGENT_TOKEN --bootstrap-script=$BUILDPACK_PATH/etc/bootstrap.sh --hooks-path=$BUILDPACK_PATH/hooks --build-path=$BUILD_DIR
